<!DOCTYPE html>
<html lang="es">

    <%- include('partials/head') %>

    <body id="nuestros-clientes">
        <%- include('partials/header') %>
        <main>
            <div class="img">
                <img src="images/nuestros-clientes.jpg" alt="Clientes de Pampa IngenierÃ­a" width="100%">
                <h1>NUESTROS CLIENTES.</h1>
            </div>
        </main>
        
        <section>
            <div class="clientes">
                <div class="container">
                    <div class="row">
                        <% todos.forEach(client => { %>
                            <div class="col-4 sop-cliente">
                                <a href="/clientes/<%= client.id %>" title="<%= client.title %> por Pampa Ingenieria">
                                    <img src="<%= client.cover %>" alt="<%= client.title %>" width="100%" class="portada">
                                    <div class="transparencia"></div>
                                    <img src="images/clientes/<%= client.url %>/<%= client.logo %>" alt="Logo <%= client.title %>" class="logo-cliente">
                                    <h6><%= client.title %> - <%= client.city %></h6>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </section>
        
        <%- include('partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>
    </body>
</html>